# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# Database Configuration
MONGODB_STAGING_URL=mongodb://gravitypm_user:gravitypm_password@mongodb-staging:27017/gravitypm_staging?replicaSet=rs0
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=staging_password_123

# Redis Configuration
REDIS_STAGING_URL=redis://redis:6379

# Application Configuration
SECRET_KEY=staging_secret_key_change_in_production
ENVIRONMENT=staging

# Frontend Configuration
NEXT_PUBLIC_API_STAGING_URL=https://staging-api.gravitypm.com
NEXT_PUBLIC_APP_URL=https://staging.gravitypm.com

# Monitoring Configuration
GRAFANA_PASSWORD=staging_grafana_password

# SSL Configuration (for staging)
SSL_CERT_PATH=/app/ssl/staging.crt
SSL_KEY_PATH=/app/ssl/staging.key

# Email Configuration (staging)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@gravitypm.com
SMTP_PASSWORD=staging_email_password

# OAuth Configuration (staging)
GOOGLE_CLIENT_ID=staging_google_client_id
GOOGLE_CLIENT_SECRET=staging_google_client_secret
GOOGLE_REDIRECT_URI=https://staging.gravitypm.com/auth/google/callback

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/staging.log

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
